/**
 * PhysicalPlan contains additional information for physical object.
 * It contains object id (sourceId, operatorId, sinkId) and actual object class (ex: MapOperator.class ..)
 * in addition to Vertex information.
 */
{
  "namespace": "edu.snu.mist.formats.avro",
  "name": "AvroPhysicalPlan",
  "type": "record",
  "fields":
  [
    {
      "name": "QueryId",
      "type": "string"
    },
    {
      "name": "PhysicalVertices",
      "type":
      {
        "type": "map",
        "values":
        {
          "name": "PhysicalVertex",
          "type": "record",
          "fields":
          [
            {
              "name": "PhysicalVertexClass",
              "type": "string"
            },
            {
              "name": "Edges",
              "type":
              {
                "type": "array",
                "items": "string"
              }
            },
            {
              "name": "LogicalInfo",
              "type":
              {
                "name": "Vertex",
                "type": "record",
                "fields":
                [
                  {
                    "name": "VertexType",
                    "type":
                    {
                      "name": "VertexTypeEnum",
                      "type": "enum",
                      "symbols":
                      [
                        "SOURCE", "INSTANT_OPERATOR", "WINDOW_OPERATOR", "SINK"
                      ]
                    }
                  },
                  {
                    "name": "Attributes",
                    "type":
                    [
                      {
                        "name": "SourceInfo",
                        "type": "record",
                        "fields":
                        [
                          {
                            "name": "SourceType",
                            "type":
                            {
                              "name": "SourceTypeEnum",
                              "type": "enum",
                              "symbols":
                              [
                                "TEXT_SOCKET_SOURCE"
                              ]
                            }
                          },
                          {
                            "name": "SourceConfiguration",
                            "type":
                            {
                              "type": "map",
                              "values":
                              [
                                "bytes", "int", "string", "float", "boolean"
                              ]
                            }
                          },
                          {
                            "name": "WatermarkType",
                            "type":
                            {
                              "name": "WatermarkTypeEnum",
                              "type": "enum",
                              "symbols":
                              [
                                "PERIODIC", "PUNCTUATED"
                              ]
                            }
                          },
                          {
                            "name": "WatermarkConfiguration",
                            "type":
                            {
                              "type": "map",
                              "values":
                              [
                                "bytes", "int", "string", "float", "boolean"
                              ]
                            }
                          }
                        ]
                      },
                      {
                        "name": "InstantOperatorInfo",
                        "type": "record",
                        "fields":
                        [
                          {
                            "name": "InstantOperatorType",
                            "type":
                            {
                              "name": "InstantOperatorTypeEnum",
                              "type": "enum",
                              "symbols":
                              [
                                "APPLY_STATEFUL", "APPLY_STATEFUL_WINDOW", "FILTER", "FLAT_MAP", "MAP", "REDUCE_BY_KEY", "REDUCE_BY_KEY_WINDOW", "UNION", "AGGREGATE_WINDOW"
                              ]
                            }
                          },
                          {
                            "name": "Functions",
                            "type":
                            {
                              "type": "array",
                              "items": "bytes"
                            }
                          },
                          {
                            "name": "KeyIndex",
                            "type": ["null", "int"]
                          }
                        ]
                      },
                      {
                        "name": "WindowOperatorInfo",
                        "type": "record",
                        "fields":
                        [
                          {
                            "name": "WindowOperatorType",
                            "type":
                            {
                              "name": "WindowOperatorTypeEnum",
                              "type": "enum",
                                "symbols":
                                [
                                  "TIME", "COUNT", "SESSION", "JOIN"
                                ]
                            }
                          },
                          {
                            "name": "Functions",
                            "type":
                            {
                              "type": "array",
                              "items": "bytes"
                            }
                          },
                          {
                            "name": "WindowSize",
                            "type": "int"
                          },
                          {
                            "name": "WindowEmissionInterval",
                            "type": "int"
                          }
                        ]
                      },
                      {
                        "name": "SinkInfo",
                        "type": "record",
                        "fields":
                        [
                          {
                            "name": "SinkType",
                            "type":
                            {
                              "name": "SinkTypeEnum",
                              "type": "enum",
                              "symbols":
                              [
                                "TEXT_SOCKET_SINK"
                              ]
                            }
                          },
                          {
                            "name": "SinkConfiguration",
                            "type":
                            {
                              "type": "map",
                              "values":
                              [
                                "bytes", "int", "string", "float", "boolean"
                              ]
                            }
                          }
                        ]
                      }
                    ]
                  }
                ]
              }
            }
          ]
        }
     }
    }
  ]
}