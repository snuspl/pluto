/**
 * This protocol defines the client message to mist tasks. The current implemented part is query submission action.
 **/
{
  "namespace": "edu.snu.mist.formats.avro",
  "protocol": "ClientToTaskMessage",
  "types":
  [
    {
      "type": "record",
      "name": "LogicalPlan",
      "fields":
      [
        {
          "name": "JarFilePaths",
          "type":
          {
            "type": "array",
            "items": "string"
          }
        },
        {
          "name": "AvroVertices",
          "type":
          {
            "type": "array",
            "items":
            {
              "name": "AvroVertexChain",
              "type": "record",
              "fields":
              [
                {
                  "name": "AvroVertexChainType",
                  "type":
                  {
                    "name": "AvroVertexTypeEnum",
                    "type": "enum",
                    "symbols": ["SOURCE", "OPERATOR_CHAIN", "SINK"]
                  }
                },
                {
                  "name": "VertexChain",
                  "type":
                  {
                    "type": "array",
                    "items":
                    {
                      "name": "Vertex",
                      "type": "record",
                      "fields":
                      [
                        {
                          "name": "Configuration", /* Configuration that is serialized using Tang */
                          "type": "string"
                        }
                      ]
                    }
                  }
                }
              ]
            }
          }
        },
        {
          "name": "Edges",
          "type":
          {
            "type": "array",
            "items":
            {
              "name": "Edge",
              "type": "record",
              "fields":
              [
                {
                  "name": "From",
                  "type": "int"
                },
                {
                  "name": "To",
                  "type": "int"
                },
                {
                  "name": "Direction",
                  "type": {
                    "name": "Direction",
                    "type": "enum",
                    "symbols": ["LEFT", "RIGHT"]
                  }
                }
              ]
            }
          }
        }
      ]
    },
    {
      "type": "record",
      "name": "JarUploadResult",
      "fields":
      [
        {
          "name": "IsSuccess",
          "type": "boolean"
        },
        {
          "name": "Msg",
          "type": "string"
        },
        {
          "name": "Paths",
          "type": {
            "type": "array",
            "items": "string"
          }
        }
      ]
    },
    {
      "type": "record",
      "name": "QueryControlResult",
      "fields":
      [
        {
          "name": "QueryId",
          "type": "string"
        },
        {
          "name": "IsSuccess",
          "type": "boolean"
        },
        {
          "name": "Msg",
          "type": "string"
        }
      ]
    }
  ],
  "messages":
  {
    "uploadJarFiles":
    {
      "request":
      [
        {
          "name": "jarFiles",
          "type":
          {
            "type": "array",
            "items": "bytes"
          }
        }
      ],
      "response": "JarUploadResult"
    },
    "sendQueries":
    {
      "request":
      [
        {
          "name": "logicalPlan",
          "type": "LogicalPlan"
        }
      ],
      "response": "QueryControlResult"
    },
    "deleteQueries":
    {
      "request":
      [
        {
          "name": "queryId",
          "type": "string"
        }
      ],
      "response": "QueryControlResult"
    },
    "stopQueries":
    {
      "request":
      [
        {
          "name": "queryId",
          "type": "string"
        }
      ],
      "response": "QueryControlResult"
    },
    "resumeQueries":
    {
      "request":
      [
        {
          "name": "queryId",
          "type": "string"
        }
      ],
      "response": "QueryControlResult"
    }
  }
}